{
	"extends": "@repo/typescript-config/base.json",
	"exclude": ["node_modules"],
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"types": ["node"],
		"outDir": "./dist",
		"target": "ESNext",

		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@core/*": ["./src/core/*"],
			"@infra/*": ["./src/infra/*"]
		}
	}
}
