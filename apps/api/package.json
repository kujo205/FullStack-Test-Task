{
	"name": "api",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/infra/http/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"db:codegen": "npx kysely-codegen --out-file src/infra/db/types.ts",
		"db:make-migration": "npx kysely migrate:make",

		"db:migrate": "npx kysely migrate:latest",
		"db:make-seed": "npx kysely seed:make",
		"db:seed": "npx kysely seed:run",
		"db:up": "docker compose up -d",
		"db:down": "docker compose down",
		"test:unit": "vitest run ./src/**",
		"test:i": "dotenv -e .env.test vitest run ./tests/integration/**",
		"pretest:i": "docker compose -f docker-compose-test.yml up -d --build && dotenv -e .env.test -- npm run db:migrate && dotenv -e .env.test -- npm run db:seed",
		"posttest:i": "pnpm db:down"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.6",
		"@hono/zod-validator": "^0.7.6",
		"better-auth": "^1.4.7",
		"dotenv": "^17.2.3",
		"hono": "^4.11.1",
		"kysely": "^0.28.9",
		"kysely-ctl": "^0.19.0",
		"pg": "^8.16.3",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@repo/biome-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^20.11.17",
		"@types/pg": "^8.16.0",
		"kysely-codegen": "^0.19.0",
		"tsx": "^4.7.1",
		"typescript": "^5.8.3",
		"vitest": "^3.0.5"
	}
}
