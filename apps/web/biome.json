{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "root": false,
  "extends": ["@repo/biome-config/base"],
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "arrowParentheses": "always"
    }
  }
}
