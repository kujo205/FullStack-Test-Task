{
  "extends": "@repo/typescript-config/react-library.json",
  "include": ["**/*.ts", "**/*.tsx", "vite.config.js"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",

    "types": ["vite/client"],
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false
  }
}
